<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".Views.CourseOverview.CourseDetailsOverviewFragment">


    <ImageButton
        android:id="@+id/ibtnOpenEdit"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/fui_transparent"
        android:src="@drawable/ic_mode_edit_black_24dp"
        android:tint="@color/secondaryColor" />

    <ImageView
        android:id="@+id/ivEditDone"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/fui_transparent"
        android:src="@drawable/ic_done_black_24dp"
        android:tint="@color/secondaryLightColor"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvPresentInNumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:textColor="@color/secondaryColor" />

    <LinearLayout
        android:id="@+id/layoutPresent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:animateLayoutChanges="false"
        android:background="@drawable/item_background"
        android:clipToPadding="false"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:minHeight="48dp"
        android:orientation="horizontal"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tvPresent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="15dp"
            android:text="Prisutnost"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageButton
                android:id="@+id/btnPresentSubstract"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@color/fui_transparent"
                android:src="@drawable/ic_remove_circle_outline_black_24dp"
                android:tint="@color/background"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/tvPresentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:gravity="right|center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <ImageButton
                android:id="@+id/btnPresentAdd"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginEnd="16dp"
                android:background="@color/fui_transparent"
                android:src="@drawable/ic_add_circle_outline_black_24dp"
                android:tint="@color/background"
                tools:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutAbsent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/item_background"
        android:foreground="?android:attr/selectableItemBackground"
        android:minHeight="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAbsent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="16dp"
            android:text="Odsutnost"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageButton
                android:id="@+id/btnAbsentSubstract"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@color/fui_transparent"
                android:src="@drawable/ic_remove_circle_outline_black_24dp"
                android:tint="@color/background"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/tvAbsentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <ImageButton
                android:id="@+id/btnAbsentAdd"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginEnd="16dp"
                android:background="@color/fui_transparent"
                android:src="@drawable/ic_add_circle_outline_black_24dp"
                android:tint="@color/background"
                tools:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSigned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/item_background_sign_in"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSigned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="start|center_vertical"
            android:padding="16dp"
            android:text="Aj me upiÅ¡i"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageButton
                android:id="@+id/btnSignSubstract"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@color/fui_transparent"
                android:src="@drawable/ic_remove_circle_outline_black_24dp"
                android:tint="@color/background"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/tvSignedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />


            <ImageButton
                android:id="@+id/btnSignAdd"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginEnd="16dp"
                android:background="@color/fui_transparent"
                android:src="@drawable/ic_add_circle_outline_black_24dp"
                android:tint="@color/background"
                tools:visibility="gone" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>